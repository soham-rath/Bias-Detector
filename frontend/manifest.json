{
  "manifest_version": 3,
  "name": "Bias Detector",
  "version": "1.0",
  "description": "Highlights biased words in political texts.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
